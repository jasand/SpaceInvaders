<?xml version="1.0" encoding="utf-8"?>
<manifest package="no.jan.android.spaceinvaders"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/invaders_ico"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="no.jan.android.spaceinvaders.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="no.jan.android.spaceinvaders.MainMenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="no.jan.android.spaceinvaders.AboutGameActivity"
            android:label="@string/title_activity_about_game"
            android:parentActivityName="no.jan.android.spaceinvaders.MainMenuActivity"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.jan.android.spaceinvaders.MainMenuActivity" />
        </activity>
        
        <activity
            android:name="no.jan.android.spaceinvaders.HighScoreActivity"
            android:label="@string/title_activity_high_score"
            android:parentActivityName="no.jan.android.spaceinvaders.MainMenuActivity"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.jan.android.spaceinvaders.MainMenuActivity" />
        </activity>
        
        <activity
            android:name="no.jan.android.spaceinvaders.GameActivity"
            android:label="@string/app_name"
            android:parentActivityName="no.jan.android.spaceinvaders.GameActivity"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.jan.android.spaceinvaders.MainMenuActivity" />
        </activity>
        
        <activity
            android:name="no.jan.android.spaceinvaders.SettingsActivity"
            android:label="@string/action_settings_label"
            android:parentActivityName="no.jan.android.spaceinvaders.MainMenuActivity"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.jan.android.spaceinvaders.MainMenuActivity" />
        </activity>
        
        <activity
            android:name="no.jan.android.spaceinvaders.RegisterHighScoreActivity"
            android:label="@string/register_score_scoreLabel"
            android:parentActivityName="no.jan.android.spaceinvaders.MainMenuActivity"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.jan.android.spaceinvaders.MainMenuActivity" />
        </activity>
    </application>

</manifest>
