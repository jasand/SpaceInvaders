<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deep_space"
    android:orientation="vertical"
    android:weightSum="6" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

		<TextView
            android:id="@+id/highscore_listItemNameLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="@string/main_menu_heading"
            android:textColor="@color/header_color"
            android:textSize="@dimen/activity_menu_header" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/highscore_listItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/main_menu_text"
            android:textColor="@color/header_color"
            android:textSize="@dimen/activity_menu_text" /> />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/about_button"
            style="@style/button_text"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_button"
            android:gravity="center"
            android:onClick="onAboutGameClicked"
            android:text="@string/about_buttontext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/high_score_button"
            style="@style/button_text"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_button"
            android:gravity="center"
            android:onClick="onHighScoreClicked"
            android:text="@string/high_score_buttontext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/play_game_button"
            style="@style/button_text"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_button"
            android:gravity="center"
            android:onClick="onPlayGameClicked"
            android:text="@string/play_game_buttontext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRegisterHighScoreClicked"
            android:text="Button" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/jan.arne.sandnes/AndroidStudioProjects/SpaceInvaders/app/src/main/res/layout-sw600dp/activity_main_menu.xml -->